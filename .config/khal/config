
[calendars]

  [[home]]
  path = ~/.config/calendars/home/
  color = dark blue

  [[work]]
  path = ~/.config/calendars/work/
  color = dark green

  [[ims-phd]]
  path = ~/.config/calendars/ims-phd/
  color = dark red

  [[birthday]]
  type = birthdays
  path = ~/.config/contacts/default/
  color = dark magenta
  readonly = True

[locale]

  local_timezone = Europe/Berlin
  default_timezone = Europe/Berlin
  timeformat= %H:%M
  dateformat= %d.%m.
  longdateformat= %d.%m.%Y
  datetimeformat= %d.%m. %H:%M
  longdatetimeformat= %d.%m.%Y %H:%M

[default]

  highlight_event_days = True
  print_new = event
  timedelta = 7d

[view]
  dynamic_days = True
